
<div class="container-fluid mt-3">


<h2>Category: 
    <%= @product.category %>
</h2>
<h4><%= @product.name %></h4>
<h4><%= @product.price %></h4>

<h4><%= image_tag(@product.image, style:'width:20%') %><h4>

<%= link_to "Edit", edit_product_path(@product.id), class:"btn btn-primary" %>
<%= link_to "Delete", product_path(@product.id), method: :delete, class:"btn btn-danger" %>
<%= link_to "Back", products_path, class:"btn btn-secondary" %>



</div>