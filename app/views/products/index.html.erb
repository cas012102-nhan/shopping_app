

<div class="container">
  <div class="row">

  <div class="col-md-10">
  <div class="row">

    <% @products.each do |product| %>
        <div class="col-md-6">
            <div class="card mt-3">
                <div class="Card-body">
                    <h4><%= link_to product.name, product_path(product.id) %></h4>
                    <%= link_to "View", product_path(product.id), class:"btn btn-secondary" %>
                  
                </div>
            </div>
        </div>
    <% end %>
    </div>
    </div>


    <div class="col-md-2">
      <div class="card mt-3">
        <div class="card-header" >
          Categories
        </div>
    </div>

    <div class="card-body">

    <ul class="list-group">
        <% @categories.each do |category| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to category.category, products_path(:cate => category.id)%>
            <span class="badge bg-primary rounded-pill"><%= category.products.count %></span>
          </li>
        <% end %>
    </ul>
        
       
        
    </div>

    
        
    

  </div>
</div>







